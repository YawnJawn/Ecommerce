<div id="<%= dom_id category %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= category.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= category.description %>
  </p>

  <% if action_name !="show"%>
    <%= link_to "Show this Category", [:admin, category]%>
    <%= link_to "Edit this category", edit_admin_category_path(category)%>
    <%end%>
</div>
